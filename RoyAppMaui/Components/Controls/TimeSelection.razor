               AmPm="true"
               AutoClose="false"
               Editable="true"
               ImmediateText="true"
               Label="@Label"
               PickerClosed="_timepicker.ResetAsync"
               PickerVariant="PickerVariant.Dialog"
               Placeholder="hh:mm"
               Time="@Time"
               TimeChanged="@TimeChanged"
               TimeFormat="HH:mm"
               Variant="Variant.Text" />