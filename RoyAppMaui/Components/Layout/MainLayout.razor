@inherits LayoutComponentBase

<MudThemeProvider @ref="@_mudThemeProvider" @bind-IsDarkMode="@Settings.IsDarkMode" />
<MudDialogProvider MaxWidth="MaxWidth.ExtraSmall"
                   CloseButton="true"
                   DisableBackdropClick="true"
                   Position="DialogPosition.Center"
                   CloseOnEscapeKey="true" />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudAvatar>
            <MudImage Elevation="25"
                      Src="images/portrait.jpg" />
        </MudAvatar>
        <MudText Class="ml-3"
                 Typo="Typo.h5">
            RoyApp
        </MudText>

        <MudSpacer />

        <MudTooltip Text="Toggle the theme">
            <MudIconButton Color="@ThemeIconColor"
                           Icon="@ThemeIcon"
                           OnClick="ThemeToggle" />
        </MudTooltip>

        <MainMenu />
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>
