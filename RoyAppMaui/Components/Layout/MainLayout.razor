@inherits LayoutComponentBase


<MudThemeProvider @ref="@_mudThemeProvider" @bind-IsDarkMode="@Settings.IsDarkMode" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudAvatar>
            <MudImage Src="images/portrait.jpg" Elevation="25" />
        </MudAvatar>
        <MudText Class="ml-3" Typo="Typo.h5">RoyApp</MudText>
        <MudSpacer />
        <MudTooltip Text="Toggle the theme">
            <MudIconButton Color="@ThemeIconColor"
                           Icon="@ThemeIcon"
                           OnClick="ThemeToggle" />
        </MudTooltip>
        <MudMenu AnchorOrigin="Origin.BottomRight"
                 Color="Color.Inherit"
                 Icon="@Icons.Material.Filled.MoreVert"
                 TransformOrigin="Origin.TopRight">
            <MudMenuItem Icon="@Icons.Material.Filled.FileUpload"
                         OnClick="HandleFileImportClick"
                         Style="width:220px">
                         Import Data File
            </MudMenuItem>
            <MudMenuItem Icon="@Icons.Material.Filled.Save"
                         OnClick="HandleFileExportClick"
                         Style="width:220px">
                         Save To File
            </MudMenuItem>
            <MudDivider />
            <MudMenuItem Icon="@Icons.Material.Filled.PlaylistRemove"
                         OnClick="HandleClearListClick"
                         Style="width:220px">
                         Clear List
            </MudMenuItem>
        </MudMenu>
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>
