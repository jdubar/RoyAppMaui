@inherits LayoutComponentBase


<MudThemeProvider @ref="@_mudThemeProvider" @bind-IsDarkMode="@Settings.IsDarkMode" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudAvatar>
            <MudImage Src="images/portrait.jpg" Elevation="25" />
        </MudAvatar>
        <MudText Typo="Typo.h5" Class="ml-3">RoyApp</MudText>
        <MudSpacer />
        <MudMenu Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" AnchorOrigin="Origin.BottomRight" TransformOrigin="Origin.TopRight" >
            <MudMenuItem Icon="@Icons.Material.Filled.FileUpload"
                         OnClick="HandleFileImportClick"
                         Style="width:220px">
                         Import Data File
            </MudMenuItem>
            <MudMenuItem Icon="@Icons.Material.Filled.Save"
                         OnClick="HandleFileExportClick"
                         Style="width:220px">
                         Save To File
            </MudMenuItem>
            <MudDivider />
            <MudMenuItem Icon="@Icons.Material.Filled.PlaylistRemove"
                         OnClick="HandleClearListClick"
                         Style="width:220px">
                         Clear List
            </MudMenuItem>
        </MudMenu>
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>
