@inherits LayoutComponentBase


<MudThemeProvider @ref="@_mudThemeProvider" @bind-IsDarkMode="@_isDarkMode" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudAvatar>
            <MudImage Src="images/portrait.jpg" Elevation="25" />
        </MudAvatar>
        <MudText Typo="Typo.h5" Class="ml-3">RoyApp</MudText>
        <MudSpacer />
        <MudMenu Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" AnchorOrigin="Origin.BottomLeft" TransformOrigin="Origin.BottomCenter" >
            <MudMenuItem>Profile</MudMenuItem>
        </MudMenu>
    </MudAppBar>
    <CascadingValue Value="ImportFilePath">
        <MudMainContent>
            @Body
        </MudMainContent>
    </CascadingValue>
</MudLayout>
